<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="letschert_ruh.einkaufsliste">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GUI.Activities.Activity_ListOverview">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GUI.Activities.Activity_ArticleOverview"
                    android:parentActivityName=".GUI.Activities.Activity_ListOverview"/>
        <activity android:name=".GUI.Activities.Activity_ListView"
                    android:parentActivityName=".GUI.Activities.Activity_ListOverview"/>
        <activity android:name=".GUI.Activities.Activity_EditArticle"
                    android:parentActivityName=".GUI.Activities.Activity_ArticleOverview"/>
    </application>

</manifest>